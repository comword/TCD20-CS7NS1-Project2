{
  "name": "Captcha",
  "n_gpu": 0,
  "log_config": "src/logger/logger_config.json",
  "save_dir": "saved/",
  "arch": {
    "type": "CaptchaCNN",
    "args": {
      "n_classes": 95
    }
  },
  "data_loader": {
    "type": "CaptchaDataLoader",
    "args": {
      "data_path": "data/geto-project1",
      "n_len": [5, 6],
      "train_total": 100,
      "characters": " 0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ",
      "batch_size": 50,
      "shuffle": false,
      "validation_split": 0.1,
      "num_workers": 4
    }
  },
  "loss": "ctc_loss",
  "metrics": ["accuracy"],
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "lr_scheduler": {
    "type": "PolynomialLR",
    "args": {
      "step_size": 10,
      "iter_max": 2000,
      "power": 0.9
    }
  },
  "trainer": {
    "type": "CaptchaTrainer",
    "args": {},
    "epochs": 300,
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max val_accuracy",
    "early_stop": 20,
    "tensorboard": false
  }
}
