{
  "name": "CaptchaBonus",
  "n_gpu": 0,
  "log_config": "src/logger/logger_config.json",
  "save_dir": "saved/",
  "arch": {
    "type": "CaptchaCNN",
    "args": {
      "n_classes": 95
    }
  },
  "data_loader": {
    "type": "CaptchaDataLoader",
    "args": {
      "data_path": "data/geto-project1",
      "n_len": [1, 5],
      "train_total": 200000,
      "characters": " 0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^&*()",
      "batch_size": 1280,
      "shuffle": false,
      "validation_split": 0.1,
      "num_workers": 0
    }
  },
  "loss": "ctc_loss",
  "metrics": ["accuracy"],
  "optimizer": {
    "type": "SGD",
    "args": {
      "weight_decay": 5.0e-4,
      "lr": 0.002,
      "momentum": 0.9
    }
  },
  "lr_scheduler": {
    "type": "PolynomialLR",
    "args": {
      "step_size": 10,
      "iter_max": 500,
      "power": 0.9
    }
  },
  "trainer": {
    "type": "CaptchaTrainer",
    "args": {},
    "epochs": 150,
    "save_period": 15,
    "verbosity": 2,
    "monitor": "max val_accuracy",
    "early_stop": 40,
    "tensorboard": false
  }
}
